<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    binding:animation="AFTERCOMMAND(IF(Passed,@anim/nod,@anim/shake),Verify)"
    binding:background="Wallpaper" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:text="jnkjbnbbkhnmh"
                android:textColor="#333"
                android:textSize="20dip" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="Please enter your password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#333"
            android:textSize="18dip" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="0,1,2" >

            <TableRow>

                <Button
                    android:id="@+id/btn_seven"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,7)"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_eight"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,8)"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_nine"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,9)"
                    android:text="9" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn_four"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,4)"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_five"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,5)"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_six"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,6)"
                    android:text="6" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn_one"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,1)"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_two"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,2)"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_three"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,3)"
                    android:text="3" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn_back"
                    style="@style/CodeFont"
                    android:onClick="Clear"
                    android:text="C" />

                <Button
                    android:id="@+id/btn_zero"
                    style="@style/CodeFont"
                    android:onClick="ARG(Number,0)"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/CodeFont"
                    android:layout_width="30dip"
                    android:onClick="Verify"
                    android:text="X" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>